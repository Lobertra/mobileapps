<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
        <item name="android:layout_margin">8dp</item>
        <item name="android:fontFamily">@font/alloy</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:text">123 Guessing\n Game</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textSize">50sp</item>

    </style>

    <style name="menu_button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/btn</item>
        <item name="android:fontFamily">@font/pdark</item>
        <item name="android:textColor">#F9F9F9</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="submit_button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/btn</item>
        <item name="android:fontFamily">@font/alloy</item>
        <item name="android:textColor">#F9F9F9</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="input">
        <item name="android:text">100</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/board</item>
        <item name="android:fontFamily">@font/chalk</item>
        <item name="android:textColor">#F9F9F9</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">18dp</item>
        <item name="android:inputType">number</item>
        <item name="android:lines">1</item>
    </style>

</resources>